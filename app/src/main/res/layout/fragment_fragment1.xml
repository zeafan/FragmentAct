<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dip">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/s_14_16_18"
            android:padding="@dimen/padding_elements"
            android:layout_marginRight="@dimen/s_14_16_18">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:text="name"

                    android:textSize="@dimen/s_14_16_18" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:hint="name"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/s_14_16_18">

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:text="latinName"
                    android:textSize="@dimen/s_14_16_18" />

                <EditText
                    android:id="@+id/etLatinName"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:hint="latinName"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/s_14_16_18">

                </EditText>
            </TableRow>


        </TableLayout>
    </LinearLayout>
</RelativeLayout>